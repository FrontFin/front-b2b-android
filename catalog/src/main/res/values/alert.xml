<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FrontB2BCatalog.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/blueberry40</item>
        <item name="alertDialogStyle">@style/FrontB2BCatalog.AlertDialogStyle</item>
        <item name="materialAlertDialogTitlePanelStyle">@style/FrontB2BCatalog.MaterialAlertDialog.Title.Panel</item>
        <item name="materialAlertDialogTitleTextStyle">@style/FrontB2BCatalog.MaterialAlertDialog.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/FrontB2BCatalog.MaterialAlertDialog.Body</item>
        <item name="buttonBarPositiveButtonStyle">@style/FrontB2BCatalog.MaterialAlertDialog.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/FrontB2BCatalog.MaterialAlertDialog.Button.Negative</item>
    </style>

    <style name="FrontB2BCatalog.AlertDialogStyle" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/FrontB2BCatalog.ShapeAppearance</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="FrontB2BCatalog.ShapeAppearance" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerSize">24dp</item>
    </style>

    <style name="FrontB2BCatalog.MaterialAlertDialog.Title.Panel" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:paddingTop">24dp</item>
    </style>

    <style name="FrontB2BCatalog.MaterialAlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/dm_sans_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="FrontB2BCatalog.MaterialAlertDialog.Body" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="FrontB2BCatalog.MaterialAlertDialog.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="fontFamily">@font/dm_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetBottom">16dp</item>
    </style>

    <style name="FrontB2BCatalog.MaterialAlertDialog.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>